[alias]
	st = status
	di = diff
	co = checkout
	ci = commit
	br = branch
	sta = stash
	llog = log --date=local
	flog = log --pretty=fuller --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	git = !exec git
	lol = log --graph --decorate --oneline
	lola = log --graph --decorate --oneline --all
	blog = log origin/master... --left-right
	ds = diff --staged
	fixup = commit --fixup
	squash = commit --squash
	unstage = reset HEAD
	rum = rebase master@{u}
	dc = duet-commit
	s = status --branch --short
	push-f = push --force-with-lease
  up = push -u
  down = pull
  deploy = push heroku staging:master
[core]
	pager = less -FXRS -x2
	excludesfile = ~/.gitignore_global
[apply]
	whitespace = nowarn
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[branch]
	autosetupmerge = true
[rebase]
	autosquash = true
[push]
	default = current
[interactive]
	singlekey = true
[merge]
	conflictstyle = diff3
[credential]
	helper =
	helper = cache --timeout 14400
[user]
	name = Scott Windsor
	email = swindsor@gmail.com
[init]
	templatedir = ~/.git_templates
[pull]
	rebase = true
[merge]
  conflictStyle = diff3
